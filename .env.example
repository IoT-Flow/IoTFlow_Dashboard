# IoTFlow Dashboard Environment Variables
# Copy this file to .env.local and configure for your environment

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001

# Application Configuration
REACT_APP_NAME=IoTFlow Dashboard
REACT_APP_VERSION=1.0.0

# Development Settings
REACT_APP_ENV=development
GENERATE_SOURCEMAP=true

# Debug Settings (development only)
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true

# Optional: External Services
# REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# REACT_APP_MAPBOX_TOKEN=your_mapbox_token

# Optional: Authentication
# REACT_APP_AUTH_PROVIDER=oauth2
# REACT_APP_AUTH_CLIENT_ID=your_client_id

# Optional: Monitoring
# REACT_APP_SENTRY_DSN=your_sentry_dsn
# REACT_APP_ANALYTICS_ID=your_analytics_id

# Build Configuration
# INLINE_RUNTIME_CHUNK=false
# IMAGE_INLINE_SIZE_LIMIT=10000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_MQTT_MONITORING=true
REACT_APP_ENABLE_DEVICE_MANAGEMENT=true

# Security
REACT_APP_ADMIN_TOKEN_LENGTH=32
