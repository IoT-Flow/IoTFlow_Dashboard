# IoTFlow Backend Environment Configuration
# Copy this file to .env and configure the values for your environment

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database Configuration
DB_PATH=./src/database.sqlite
# For production with PostgreSQL, use DATABASE_URL instead:
# DATABASE_URL=postgresql://username:password@host:port/database

# Security Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# IoTDB Configuration
IOTDB_HOST=localhost
IOTDB_PORT=6667
IOTDB_USERNAME=root
IOTDB_PASSWORD=root
IOTDB_DATABASE=iotflow

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Session Configuration - CHANGE THIS IN PRODUCTION
SESSION_SECRET=your_session_secret_key_change_this_in_production
SESSION_TIMEOUT=3600000

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@iotflow.com

# Notification Settings
NOTIFICATION_CLEANUP_INTERVAL=86400000
MAX_NOTIFICATIONS_PER_USER=1000

# Development/Debug (set to false in production)
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true